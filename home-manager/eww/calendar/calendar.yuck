(defwidet cal-box []
  (box  :class "cal-box"
        :orientation "h"
        :space-evenly false
        :halign "center"
        :valign "center"
    (cal)
    (weather)
  )
)

(defwidget cal []
  (box  :class "cal-box"
        :orientation "v"
        :space-evenly false
    (calendar :class "calendar"
              :day calendar_day
              :month calendar_month
              :year calendar_year
              :show-week-numbers true)
  )
)
